{
  "name": "dico-api",
  "module": "app.ts",
  "type": "module",
  "version": "0.2.0",
  "scripts": {
    "dev": "bun --hot run app.ts",
    "tsc-watch": "tsc --watch",
    "test": "echo 'No test yet!' && exit 0",
    "build": "       tsc && bun build app.ts --target=bun         --minify-syntax --minify-whitespaces --sourcemap --outdir ./dist",
    "build-binary": "tsc && bun build app.ts --compile --bytecode --minify-syntax --minify-whitespaces --sourcemap --outfile app",
    "start": "bun run dist/app.js"
  },
  "peerDependencies": {
    "typescript": "5.7.3"
  },
  "dependencies": {
    "axios": "1.7.9",
    "cheerio": "1.0.0",
    "figlet": "1.8.0",
    "redis": "4.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/figlet": "1.7.0"
  }
}